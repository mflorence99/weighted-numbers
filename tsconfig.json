{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": [
      "es2020"
    ],
    "module": "ES2020",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "outDir": "./dist",
    "pretty": true,
    "rootDir": "./src",
    "target": "es2020",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "./src/**/*.test.ts"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}
